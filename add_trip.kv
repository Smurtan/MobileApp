#:import MapSource kivy_garden.mapview.MapSource

MDScreen:
    name: "add_trip"
    MDBoxLayout:
        orentation:"vertical"
        MDTopAppBar:
            md_bg_color: 1, 1, 1, 1
    MDRelativeLayout:
        MapView:
            map_source: MapSource(url="https://mt1.google.com/vt/lyrs=m&x={x}&y={y}&z={z}")
            lat:58.08
            lon:38.8
            zoom:10

            # AND CREATE MARKER IN YOU MAPS
            MapMarkerPopup:
                lat:50.6
                lon:3.05

                # AND CREATE POPUP IN YOU MARKER
                popup_size:dp(230),dp(130)
                Bubble:
                    MDBoxLayout:
                        padding:"4dp"
                        MDLabel:
                            text:"Artem Osokin"
                            markup:True
                            halign:"center"


            MapMarkerPopup:
                lat:50.61
                lon:3.06

                # AND CREATE POPUP IN YOU MARKER
                popup_size:dp(230),dp(130)
                Bubble:
                    MDBoxLayout:
                        padding:"4dp"
                        MDLabel:
                            text:"Antonio Benderas"
                            markup:True
                            halign:"center"
    MDCard:
        size_hint: 1, .25
        focus_behavior: False
        pos_hint: {"center_x": .5, "center_y": .95}
        elevation: 3
    MDTextField:
        id: city
        hint_text: "Город"
        helper_text: "Введите город"
        mode: "round"
        pos_hint: {"center_x": .5, "center_y": .90}
        size_hint_x: .7
    Button:
        text: "Ок"
        font_size: "20sp"
        size_hint: .3, .05
        pos_hint: {"center_x": .8,"center_y": .1}
        background_color: 0, 0, 0, 0
        canvas.before:
            Color:
                rgb: rgba(27, 151, 243, 255)
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: [5]