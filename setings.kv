MDScreen:
    name: "setings"
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"center_y": .95}
            user_font_size: "30sp"
            theme_text_color: "Custom"
            text_color: rgba(50, 0, 255, 255)
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "profile"
        Image:
            source: "assets/back.png"
            pos_hint: {"center_x": .5,"center_y": .7}
            size_hint: .5, .5
        MDLabel:
            text: "Настройки"
            font_size: "24"
            pos_hint: {"center_y": .95}
            halign: "center"
            color: rgba(34, 34, 34, 255)

        Button:
            text: "Смена имени"
            font_size: "24sp"
            size_hint: .90, .1
            pos_hint: {"center_x": .5,"center_y": .40}
            background_color: 0, 0, 0, 0
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "reviews"
            canvas.before:
                Color:
                    rgb: rgba(50, 0, 255, 255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]
        Button:
            text: "Сменя номера телефона"
            font_size: "24sp"
            size_hint: .90, .1
            pos_hint: {"center_x": .5,"center_y": .27}
            background_color: 0, 0, 0, 0
            on_release:
                root.screen.transition.direction = "left"
                root.screen.current = "reviews"
            canvas.before:
                Color:
                    rgb: rgba(50, 0, 255, 255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]
        Button:
            text: "Смена пороля"
            font_size: "24sp"
            size_hint: .90, .1
            pos_hint: {"center_x": .5,"center_y": .14}
            background_color: 0, 0, 0, 0
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "setings"
            canvas.before:
                Color:
                    rgb: rgba(50, 0, 255, 255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]