MDScreen:
    name: "reviews"
    size_hint_y: None
    height: "86dp"
    padding: "4dp"
    radius: 12
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"center_y": .95}
            user_font_size: "30sp"
            theme_text_color: "Custom"
            text_color: rgba(26, 24, 58, 255)
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "profile"

    MDBoxLayout:
        orientation: "vertical"
        adaptive_height: True
        spacing: "6dp"
        padding: "12dp", 0, 0, 0
        pos_hint: {"center_x":.5, "center_y": .5}

        MDLabel:
            text: "Title text"
            font_style: "H5"
            bold: True
            adaptive_height: True
            pos_hint: {"center_x":.5, "center_y": .5}

        MDLabel:
            text: "Subtitle text"
            theme_text_color: "Hint"
            adaptive_height: True
            pos_hint: {"center_x":.5, "center_y": .5}
