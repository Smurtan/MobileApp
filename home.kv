MDScreen:
	name: "home"
	MDFloatLayout:
		md_bg_color: 1, 1, 1, 1
		Image:
			source: "assets/logo.png"
			pos_hint: {"center_x": .10, "center_y": .95}
	    Image:
	        source: "assets/back.png"
	        size_hint: .8, .8
	        pos_hint: {"center_x": .5, "center_y": .65}
	    MDLabel:
	        text: "Hello there!"
	        #font_name: "BPoppins"
	        font_size: "23sp"
	        pos_hint: {"center_y": .38}
	        halign: "center"
	        color: rgba(34, 34, 34, 255)
	    MDLabel:
	        text: "Зарегайся по-братски это недолго"
	        #font_name: "MPoppins"
	        font_size: "13sp"
	        size_hint_x: .85
	        pos_hint: {"center_x": .5, "center_y": .3}
	        halign: "center"
	        color: rgba(127, 127, 127, 255)
	    Button: #Кнопка для входа
	        text: "Я УЖЕ СМЕШЕРИК"
	        size_hint: .66, .065
	        pos_hint: {"center_x": .5, "center_y": .19}
	        background_color: 0, 0, 0, 0
	        #font_name: "BPoppins"

	        canvas.before:
                Color:
                    rgb: rgba(27, 151, 243, 255)
	            RoundedRectangle:
	                size: self.size
	                pos: self.pos
	                radius: [5]
	    Button: #Кнопка для регистрации
	        text: "Я НОВЕНЬКИЙ"
	        size_hint: .66, .065
	        pos_hint: {"center_x": .5, "center_y": .09}
	        background_color: 0, 0, 0, 0
	        #font_name: "BPoppins"
	        color: rgba(27, 151, 243, 255)
	        canvas.before:
                Color:
                    rgb: rgba(27, 151, 243, 255)
	            Line:
	                width: 1.2
	                rounded_rectangle: self.x, self.y, self.width, self.height, 5, 5, 5, 5, 100