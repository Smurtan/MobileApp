MDScreen:
    name: "comment"
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"center_y": .95}
            user_font_size: "30sp"
            theme_text_color: "Custom"
            text_color: rgba(26, 24, 58, 255)
        Button:
            text: "Ок"
            font_size: "20sp"
            size_hint: .3, .05
            pos_hint: {"center_x": .8,"center_y": .1}
            background_color: 0, 0, 0, 0
            canvas.before:
                Color:
                    rgb: rgba(27, 151, 243, 255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]
    MDBoxLayout:
        orientation: "vertical"
        spacing: "20dp"
        adaptive_height: True
        size_hint_x: .8
        pos_hint: {"center_x": .5, "center_y": .5}

        MDTextField:
            id: com
            helper_text: "Напишите комментарий"