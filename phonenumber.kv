MDScreen:
    name: "phonenumber"
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"center_y": .95}
            user_font_size: "30sp"
            theme_text_color: "Custom"
            text_color: rgba(50, 0, 255, 255)
        MDLabel:
            text: "Смена номера"
            font_size: "18"
            pos_hint: {"center_x": .8,"center_y": .965}
            halign: "center"
            color: rgba(34, 34, 34, 255)
        MDLabel:
            text: "телефона"
            font_size: "18"
            pos_hint: {"center_x": .8,"center_y": .935}
            halign: "center"
            color: rgba(34, 34, 34, 255)
        Image:
            source: "assets/phone.png"
            pos_hint: {"center_x": .5,"center_y": .7}
            size_hint: .5, .5
        MDLabel:
            text: "Ваш текущий номер телефона:"
            font_size: "20"
            pos_hint: {"center_y": .4}
            halign: "center"
            color: rgba(34, 34, 34, 255)
        MDFloatLayout:
            size_hint: .7, .07
            pos_hint: {"center_x": .5, "center_y": .3}
            TextInput:
                id: phone
                hint_text: "Новый номер телефона"
                mode: "round"
                size_hint: .9, .9
                pos_hint: {"center_x": .5, "center_y": .7}
                background_color: 1, 1, 0, 0
                foreground_color: rgba(50, 0, 255, 255)
                cursor_color: rgba(50, 0, 255, 255)
                font_size: "20sp"
                cursor_width: "2sp"
                multiline: False
        Button:
            text: "Ок"
            font_size: "24sp"
            size_hint: .1, .05
            pos_hint: {"center_x": .5,"center_y": .05}
            background_color: 0, 0, 0, 0
            canvas.before:
                Color:
                    rgb: rgba(27, 151, 243, 255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]