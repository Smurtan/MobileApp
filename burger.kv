MDScreen:
    MDGridLayout:
        id:box
        cols: 1
        adaptive_height: True
        spacing: "50dp"
        padding: "10dp"
        MDTextField:
            hint_text: "Откуда"
            helper_text: "Введите город"
            mode: "round"
            size_hint_x: .7
        MDTextField:
            hint_text: "Куда"
            helper_text: "Введите город"
            mode: "round"
            pos_hint: {"center_x": .5, "center_y": .90}
            size_hint_x: .7
        MDTextField:
            hint_text: "Дата"
            helper_text: "Введите дату"
            mode: "round"
            pos_hint: {"center_x": .5, "center_y": .90}
            size_hint_x: .7