MDScreen:
    name: "password"
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"center_y": .95}
            user_font_size: "30sp"
            theme_text_color: "Custom"
            text_color: rgba(50, 0, 255, 255)
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "setings"
        MDLabel:
            text: "Смена пороля"
            font_size: "18"
            pos_hint: {"center_x": .8,"center_y": .95}
            halign: "center"
            color: rgba(34, 34, 34, 255)
        MDLabel:
            text: "Введите текущий пароль"
            font_size: "20"
            pos_hint: {"center_y": .8}
            halign: "center"
            color: rgba(34, 34, 34, 255)
        MDFloatLayout: #а сдесь вводят пароль звездочками
            size_hint: .7, .07
            pos_hint: {"center_x": .5, "center_y": .7}
            TextInput:
                hint_text: "Password"
                mode: "round"
                size_hint: .9, .9
                pos_hint: {"center_x": .5, "center_y": .7}
                background_color: 1, 1, 0, 0
                foreground_color: rgba(50, 0, 255, 255)
                cursor_color: rgba(50, 0, 255, 255)
                font_size: "20sp"
                cursor_width: "2sp"
                multiline: False
                password: True
        MDLabel:
            text: "Введите новый пороль"
            font_size: "20"
            pos_hint: {"center_y": .6}
            halign: "center"
            color: rgba(34, 34, 34, 255)
        MDFloatLayout: #а сдесь вводят пароль звездочками
            size_hint: .7, .07
            pos_hint: {"center_x": .5, "center_y": .5}
            TextInput:
                hint_text: "Password"
                mode: "round"
                size_hint: .9, .9
                pos_hint: {"center_x": .5, "center_y": .7}
                background_color: 1, 1, 0, 0
                foreground_color: rgba(50, 0, 255, 255)
                cursor_color: rgba(50, 0, 255, 255)
                font_size: "20sp"
                cursor_width: "2sp"
                multiline: False
                password: True
        MDLabel:
            text: "Повторите новый пороль"
            font_size: "20"
            pos_hint: {"center_y": .4}
            halign: "center"
            color: rgba(34, 34, 34, 255)
        MDFloatLayout: #а сдесь вводят пароль звездочками
            size_hint: .7, .07
            pos_hint: {"center_x": .5, "center_y": .3}
            TextInput:
                hint_text: "Password"
                mode: "round"
                size_hint: .9, .9
                pos_hint: {"center_x": .5, "center_y": .7}
                background_color: 1, 1, 0, 0
                foreground_color: rgba(50, 0, 255, 255)
                cursor_color: rgba(50, 0, 255, 255)
                font_size: "20sp"
                cursor_width: "2sp"
                multiline: False
                password: True
        MDLabel:
            text: "Если вы забыли пароль обратитесь в службу поддержки: sane303303@mail.ru"
            font_size: "16"
            pos_hint: {"center_y": .2}
            halign: "center"
            color: rgba(100, 100, 100, 100)
        Button:
            text: "Ок"
            font_size: "24sp"
            size_hint: .1, .05
            pos_hint: {"center_x": .5,"center_y": .05}
            background_color: 0, 0, 0, 0
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "setings"
            canvas.before:
                Color:
                    rgb: rgba(50, 0, 255, 255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]