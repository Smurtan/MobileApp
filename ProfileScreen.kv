MDScreen:
    name: "profile"
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"center_y": .95}
            user_font_size: "30sp"
            theme_text_color: "Custom"
            text_color: rgba(50, 0, 255, 255)
        Image:
            source: "assets/logo.png"
            pos_hint: {"center_x": .5,"center_y": .85}

        MDLabel:
            text: "Имя"
            font_size: "48"
            pos_hint: {"center_y": .7}
            halign: "center"
            color: rgba(34, 34, 34, 255)
        MDLabel:
            text: "Рейтинг: 3.5/5"
            font_size: "24"
            pos_hint: {"center_y": .6}
            halign: "center"
            color: rgba(34, 34, 34, 255)

        Button:
            text: "Мои отзывы"
            font_size: "24sp"
            size_hint: .90, .1
            pos_hint: {"center_x": .5,"center_y": .43}
            background_color: 0, 0, 0, 0
            canvas.before:
                Color:
                    rgb: rgba(50, 0, 255, 255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]
        Button:
            text: "История поездок"
            font_size: "24sp"
            size_hint: .90, .1
            pos_hint: {"center_x": .5,"center_y": .30}
            background_color: 0, 0, 0, 0
            canvas.before:
                Color:
                    rgb: rgba(50, 0, 255, 255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]
        Button:
            text: "Настройки"
            font_size: "24sp"
            size_hint: .90, .1
            pos_hint: {"center_x": .5,"center_y": .17}
            background_color: 0, 0, 0, 0
            canvas.before:
                Color:
                    rgb: rgba(50, 0, 255, 255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]