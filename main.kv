MDScreen:
    name: "main"
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"center_y": .95}
            user_font_size: "30sp"
            theme_text_color: "Custom"
            text_color: rgba(26, 24, 58, 255)
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "main"
    MDRelativeLayout:
        MapView:
            map_source: MapSource(url="https://mt1.google.com/vt/lyrs=m&x={x}&y={y}&z={z}")
            lat:50.6
            lon:3.05
            zoom:13

            # AND CREATE MARKER IN YOU MAPS
            MapMarkerPopup:
                lat:50.6
                lon:3.05

                # AND CREATE POPUP IN YOU MARKER
                popup_size:dp(230),dp(130)
                Bubble:
                    MDBoxLayout:
                        padding:"4dp"
                        MDLabel:
                            text:"Artem Osokin"
                            markup:True
                            halign:"center"

            MapMarkerPopup:
                lat:50.61
                lon:3.06

                # AND CREATE POPUP IN YOU MARKER
                popup_size:dp(230),dp(130)
                Bubble:
                    MDBoxLayout:
                        padding:"4dp"
                        MDLabel:
                            text:"Antonio Benderas"
                            markup:True
                            halign:"center"
    MDRoundFlatButton
        text: "Водитель"
        size_hint: .3, .055
        md_bg_color: "white"
        pos_hint: {"center_x": .25, "center_y": .1}

    MDRoundFlatButton
        text: "Пассажир"
        size_hint: .3, .055
        md_bg_color: "white"
        pos_hint: {"center_x": .75, "center_y": .1}





    MDFloatingActionButton:
        icon: "plus"
        elevation_normal: 12
        pos_hint: {"center_x": .5, "center_y": .1}
        on_release:
            root.manager.transition.direction = "left"
            root.manager.current = 'add_trip'


    MDFloatingActionButton:
        icon: "git"
        elevation_normal: 12
        pos_hint: {"center_x": .9, "center_y": .95}
        size_hint: (None,None)
        on_release:
            root.manager.transition.direction = "left"
            root.manager.current = 'profile'
        segment_panel_height: "56dp"

    MDFloatingActionButton:
        icon: "instagram"
        elevation_normal: 12
        pos_hint: {"center_x": .1, "center_y": .95}
        size_hint: (None,None)

    MDTextField:
        hint_text: "Город"
        mode: "round"
        helper_text: "Введите город"
        pos_hint: {"center_x": .5, "center_y": .95}
        size_hint_x: .5
