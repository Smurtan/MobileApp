MDScreen:
    name: "main"
    MDRelativeLayout:
        MapView:
            map_source: MapSource(url="https://mt1.google.com/vt/lyrs=m&x={x}&y={y}&z={z}")
            lat:58.08
            lon:38.8
            zoom:13

            # AND CREATE MARKER IN YOU MAPS
            MapMarkerPopup:
                lat:58.06
                lon:38.8

                # AND CREATE POPUP IN YOU MARKER
                popup_size:dp(230),dp(130)
                Bubble:
                    MDBoxLayout:
                        padding:"4dp"
                        MDLabel:
                            text:"Artem Osokin"
                            markup:True
                            halign:"center"

            MapMarkerPopup:
                lat:50.61
                lon:3.06

                # AND CREATE POPUP IN YOU MARKER
                popup_size:dp(230),dp(130)
